{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@routes/*": ["routes/*"],
            "@database/*": ["database/*"],
            "@utils/*": ["utils/*"],
            "@types/*": ["types/*"],
            "@modules/*": ["modules/*"],
            "src/*": ["src/*"]
        },
        "esModuleInterop": true,
        "typeRoots": ["node_modules/@types"],
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "lib": ["esnext", "dom"],
        "experimentalDecorators": true,
        "types": ["jest", "node"]
    },
    "include": [
        "src/**/*.ts",
        "src/database/models/index.ts",
        "src/config/sequelize-cli.js",
        "tests/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
